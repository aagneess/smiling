footer {
    /* background-color: var(--main-footer); */
    background-color: var(--event-text);
    width: 100%;
    height: 11rem;
    display: flex;
    flex-direction: row;
}
.footer-section {
    display: flex;
    flex-direction: row;
}
.event-host {
    display: flex;
}
a .logo {
    display: flex;
    margin: 0 1rem 0 1rem;
    width: 7rem;
    justify-content: center;
    align-items: center;
}
.footer-link {
    font-size: 18px;
    position: relative;
    color: #000;
    text-decoration: none;
}
.footer-link:hover {
    color: #000;
}
.footer-link::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: #000;
    visibility: hidden;
    transform: scaleX(0);
    transition: all 0.3s ease-in-out 0s;
  }
  .footer-link:hover::before {
    visibility: visible;
    transform: scaleX(1);
  }


           
  