.event-page {
    width: 100%;
    background-color: var(--event-bg);
    top: 0;
    left: 0;
    display: flex;
}

/* INFO SECTION */
.wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
}
.illustration {
    width: 100vw;
    position: relative;
    left: 0;
}

.introduction {
    width: 90vw;
    position: absolute;
    background-color: var(--event-text);
    padding: 1rem;
    border-radius: 2rem;
}

/* WHITE SECTION */
.green-box {
    height: 6rem;
    background-color: var(--event-text);
    display: flex;
    flex-direction: row;
    margin-bottom: 3rem;
}
.message {
    display: flex;
    align-items: center;
}
.message h2 {
    text-align: center;
    padding-right: 1rem;
}

/* TALKERS & FORM SECTION */
.talkers-cta {
    display: flex;
    width: 100%;
    flex-direction: row;
    flex-wrap: wrap;
}
.first-marker {
    background-color: #bedaa1;
    transform: skew(10deg, 1deg);
    align-items: center;
    padding: 1rem;
}
.marker-text {
    text-align: center;
    transform: skew(-10deg, -1deg);
}
.talkers {
    flex-direction: row;
    flex-wrap: wrap;
    column-count: 1;
    justify-content: center;
    width: 100%;
    padding: 4rem;
}
.talkers img {
    width: 10rem;
    margin: auto;
}
.talker {
    text-align: center;
    padding-bottom: 2rem;
}
.second-marker {
    background-color: #bedaa1;
    transform: skew(10deg, 1deg);
    padding: 1rem;
}
.container {
    display: flex;
    max-width: 300px;
    padding: 3rem;
    border-radius: 2rem;
}
.form-group p {
    padding-bottom: 0rem;
}

.form-control {
    border-radius: 0.3rem;
    border: solid 1px #e4d9c9;
    margin: 1rem 0 1rem 0;
    width: 200px;
    height: 40px;
    font-size: 18px;
    color: var(--main-color);
}
.register-button {
    padding-top: 2rem;
}

.event-button {
    display: block;
    background: transparent;
    cursor: pointer;
    position: relative;
    width: 86px;
    box-sizing: border-box;
    width: 100%;
    height: 58px;
    border: 0;
    color: white;
}

.event-button__text {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    top: 0;
    right: 8px;
    bottom: 8px;
    left: 0;
    box-sizing: border-box;
    font-size: 16px;
    border-radius: 1rem;
    background-color: var(--main-color);
}

.event-button::before {
    content: "";
    position: absolute;
    border: 2px solid var(--main-color);
    box-shadow: 0 0 8px 0 var(--main-color) (0, 0, 0, 0.25);
    top: 4px;
    right: 0;
    bottom: 0;
    left: 4px;
    border-radius: 1.2rem;
}
.event-button:active {
    outline: none;
}
.event-button:active .event-button__text {
    transform: translateX(6px) translateY(6px);
    transition: 0.1s;
}

.event-button:active .event-button__text {
    box-shadow: none;
    border-radius: 1rem;
}

/* INFO & PRODUCT */
.info-product {
    padding: 1rem;
    width: 100%;
    padding-bottom: 3rem;
}
.event-info {
    padding-bottom: 3rem;
}
/* PRODUCT SECTION */
.products {
    width: 100%;
    padding: 1rem 0 1rem 0;
}
.product-button {
    background-color: var(--main-color);
    box-shadow: 1px 1px 5px black;
    width: 11rem;
    height: 11rem;
    border-radius: 50%;
    position: absolute;
    right: 0.4rem;
    margin-top: -2rem;
    font-family: "CaveatBrush";
    color: white;
    font-size: 18px;
    border: none;
}
.hover-text {
    display: none;
}

.scroll-up-wrapper {
    display: flex;
}
.scroll-up {
    cursor: pointer;
    border: none;
    background-color: transparent;
    font-size: 18px;
    padding-bottom: 2rem;
}
.scroll-up:active {
    outline: 0;
}
