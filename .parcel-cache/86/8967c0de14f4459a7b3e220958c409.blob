/* PRODUCT SECTION */
.products {
    width: 100%;
    padding: 1rem 0 1rem 0;

}
.product-button {
    background-color: var(--main-color);
    box-shadow: 1px 1px 5px black;
    width: 11rem;
    height: 11rem;
    border-radius: 50%;
    position: absolute;
    right: 0.4rem;
    /* margin-top: 15rem; */
    margin-top: -3rem;
    font-family: 'CaveatBrush';
    color: white;
    font-size: 18px;
