'use strict'; // Get-info

const urlParams = new URLSearchParams(window.location.search);
const id = urlParams.get('id'); // console.log(id);

const form = document.querySelectorAll('input');

function addPeople(invite) {
  const input1 = document.getElementById('first-name');
  input1.innerText = `${invite.firstName}.`;
  const input2 = document.getElementById('last-name');
  input2.innerText = `${invite.lastName}.`;
  const input3 = document.getElementById('email');
  input3.innerText = `${invite.firstName}.${invite.lastName}@outlook.com`;
  form.appendChild(input1);
  form.appendChild(input2);
  form.appendChild(input3);
}

fetch('people.json').then(response => response.json()).then(invites => {
  invites.people.forEach(invite => addPeople(invite));
}); // if (`${invite.id}` === id) {}
