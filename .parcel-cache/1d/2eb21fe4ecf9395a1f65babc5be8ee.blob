.hero {
    background-color: var(--main-bg);
    margin: auto;
    display: flex;
    height: 100vh;
}
.hero h1 {
    padding-bottom: 2rem;
}
.heading {
    width: 15rem;
}
@media screen and (min-width: 800px) {
    .heading  {
        width: initial;
    }
    .hero h1 {
        padding-bottom: 7rem;
    }
}
.invitation {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

