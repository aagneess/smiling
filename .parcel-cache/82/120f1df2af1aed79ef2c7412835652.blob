h1 {
    transform: scale();
    animation: expand 0.8s;
}
@keyframes expand {
    0% {
        opacity: 0;
        transform: scale(0);
    }

    50% {
        transform: scale(1.1);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }
}

.invitation span {
    transform: scale();
    animation: expandP 1.8s;
}
@keyframes expandP {
    0% {
        opacity: 0;
        transform: scale(0);
    }

    50% {
        transform: scale(1.1);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }
}

.scroll-down {
    animation: 3s slidein forwards;
}
@keyframes slidein {
    from {
        transform: translateY(0);
        opacity: 0;
    }
    to {
        transform: translateY(4rem);
        opacity: 1;
    }
}

/* leaf animation */
.leaf {
    position: absolute;
    right: 40%;
    z-index: 99;
    animation: leaf 9s infinite;
}

@keyframes leaf {
    0% {
        transform: skew(0deg, 0deg);
    }
    50% {
        transform: skew(3deg, 0deg);
    }
    100% {
        transform: skew(0deg, 0deg);
    }
}

.leaf2 {
    position: absolute;
    right: 0;
    z-index: 99;
    animation: leaf2 9s infinite;
}
@keyframes leaf2 {
    0% {
        transform: skew(0deg, 0deg);
    }
    50% {
        transform: skew(3deg, 3deg);
    }
    100% {
        transform: skew(0deg, 0deg);
    }
}
@media screen and (min-width: 700px) {
    .leaf2 {
        left: -37%;
        top: 0;
    }
}

