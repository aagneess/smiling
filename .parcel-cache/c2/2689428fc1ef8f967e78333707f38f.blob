@media screen and (min-width: 500px) {
    p {
        font-size: 18px;
    }
    .talkers {
        column-count: 2;
    }
}

@media screen and (min-width: 700px) {
    .heading {
        width: initial;
    }
    .hero h1 {
        padding-bottom: 5rem;
    }
    p {
        font-size: 18px;
    }
    .introduction {
        padding: 4rem;
    }
    .info-product {
        width: 700px;
    }
    .product-button {
        right: 10%;
    }
    a .logo {
        margin: 0 3rem 0 3rem;
    }
    .form-group {
        padding: 4rem;
    }
}

@media screen and (min-width: 1000px) {
    .product-button {
        left: 18%;
    }
}
@media screen and (min-width: 1300px) {
    .hero-text h3 {
        font-size: 43px;
    }
    h2 {
        font-size: 24px;
    }
    p,
    .scroll-up,
    .footer-link {
        font-size: 20px;
    }
    .invitation span,
    p {
        font-size: 20px;
    }
    .introduction {
        width: 50vw;
        padding: 5rem;
    }
    .talkers-cta {
        width: 100%;
    }
    .talkers img {
        width: 15rem;
        margin: 1rem;
    }
    .form-column {
        height: 900px;
    }
    .container {
        max-width: 100%;
        padding: 5rem;
    }
    .form-group {
        margin-top: 2rem;
    }
    .event-info p {
        padding-top: 1rem;
    }
    .info-product {
        width: 100%;
        max-width: 1000px;
    }
    .products {
        padding: 0;
    }
    .product-button {
        display: none;
    }
    .overlay {
        position: absolute;
        display: flex;
        height: 645.33px;
        width: 968px;
        background-color: black;
        opacity: 0;
    }
    .overlay:hover {
        opacity: 0.7;
    }
    .hover-text {
        color: white;
        text-align: center;
        display: inherit;
        font-size: 2rem;
    }
    .overlay a {
        text-decoration: none;
    }
}

@media screen and (min-width: 1520px) {
    .info-product,
    .talkers-cta {
        display: flex;
        width: 100%;
        max-width: 1522px;
        padding: 0rem 0 4rem 0;
    }
    .event-info {
        padding: 0 4rem 0 4rem;
        width: 80%;
    }
    .products {
        width: 100%;
        padding: 0 2rem 0 0;
    }
    .overlay {
        height: 503px;
        width: 755px;
    }
}
