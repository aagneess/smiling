h1 {
    transform: scale();
    animation: expand 0.8s;
}
@keyframes expand {
    0% {
        opacity: 0;
        transform: scale(0);
    }

    50% {
        transform: scale(1.1);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }
}

.invitation span {
    transform: scale();
    animation: expandP 1.8s;
}
@keyframes expandP {
    0% {
        opacity: 0;
        transform: scale(0);
    }

    50% {
        transform: scale(1.1);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }
}

.scroll-down {
    animation: 3s slidein forwards;
}
@keyframes slidein {
    from {
        transform: translateY(0);
        opacity: 0;
    }
    to {
        transform: translateY(4rem);
        opacity: 1;
    }
}

/* leaf animation */
.leaf {
    position: absolute;
    z-index: 99;
    animation: leaf 3s infinite;
}

@keyframes leaf {
    from {
        transform: skew(3deg, 3deg);
    }
    to {
        transform: skew(0deg, 3deg);
    }
}
