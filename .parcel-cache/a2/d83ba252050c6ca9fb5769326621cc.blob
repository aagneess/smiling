h1 {
    transform: scale();
    animation: expand 0.8s;
}
@keyframes expand {
    0% {
        opacity: 0;
        transform: scale(0);
    }

    50% {
        transform: scale(1.1);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }
}

.invitation span {
    transform: scale();
    animation: expandP 1.8s;
}
@keyframes expandP {
    0% {
        opacity: 0;
        transform: scale(0);
    }

    50% {
        transform: scale(1.1);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }
}

.scroll-down {
    animation: 3s slidein forwards;
}
@keyframes slidein {
    from {
        transform: translateY(0);
        opacity: 0;
    }
    to {
        transform: translateY(4rem);
        opacity: 1;
    }
}

/* leaf animation */
.leaf {
    position: absolute;
    width: 15rem;
    padding-top: 20rem;
    left: -2rem;
    z-index: 99;
    animation: leaf 9s infinite;
    transform-origin: bottom left;
}

@keyframes leaf {
    0% {
        transform: rotate(0deg);
    }
    50% {
        transform: rotate(15deg);
    }
    100% {
        transform: rotate(0deg);
    }
}

.leaf2 {
    position: absolute;
    width: 15rem;
    right: -2rem;
    z-index: 99;
    animation: leaf2 9s infinite;
    transform-origin: top right;
}

@keyframes leaf2 {
    0% {
        transform: rotate(0deg);
    }
    50% {
        transform: rotate(5deg);
    }
    100% {
        transform: rotate(0deg);
    }
}

