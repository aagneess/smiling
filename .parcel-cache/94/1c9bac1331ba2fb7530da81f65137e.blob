@font-face {
    font-family: "CaveatBrush";
    src: url("0252ed41ba23c9d56bff993eaad54f1b");
    font-style: normal;
    font-weight: 300;
}
@font-face {
    font-family: "Roboto-Bold";
    src: url("f449f510549562fd00b17e7fef559a97");
    font-style: normal;
}
@font-face {
    font-family: "Roboto";
    src: url("4ac5570cf6e8017f96113df0987f475d");
    font-style: normal;
}
h1 {
    font-size: 7rem;
}
h2 {
    color: var(--main-color);
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: "Roboto-Bold";
}
.hero-text,
p {
    color: var(--main-color);
    font-size: 18px;
    line-height: 1.8rem;
    font-family: "Roboto";
}
.event-button__text {
    font-family: "Roboto";
    letter-spacing: 1px;
    font-size: 18px;
    font-weight: 800;
}
.scroll-up,
.footer-link {
    color: var(--main-color);
    text-transform: uppercase;
    font-family: "Roboto-Bold";
}
